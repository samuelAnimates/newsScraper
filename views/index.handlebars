<h1>NEWS!</h1>

<h2>All the news fit to scrape from the Trib:</h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <th><h3>#</h3></th>
      <th><h3>Title</h3></th>
      <th><h3>Author</h3></th>
      <th><h3>Summary</h3></th>
      <th><h3>Link</h3></th>
    </thead>
    <tbody>
      {{#each articles}}
        <tr>
            <th>{{@index}}</th>
            <td>
              {{this.entry.title}}
            </td>
            <td>
              AUTH
            </td>
            <td>
              SUM
            </td>
            <td>
              <a class="btn" target="_blank" href={{this.entry.link}}>Go to Article</a>
            </td>
        </tr>
        <tr>
          <td class="text-center" colspan=5>
            <button class="btn JS-comment-btn">View Comments on #{{@index}}</button>
            <div class="container">
              <h4>Comments:</h4>
            </div>

            <form class="form-horizontal">
              <h4>Make Your Own Comment:</h4>
              <div class="form-group">
                <label class="col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" for="comment-author-name">Name:</label>
                <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                  <input type="text" class="form-control" id="comment-author-name" placeholder="Your Name">
                </div>
              </div>
              <div class="form-group">
                <label class="col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" for="comment-title">Title:</label>
                <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                  <input type="text" class="form-control" id="comment-title" placeholder="Comment Title">
                </div>
              </div>
              <div class="form-group">
                <label class="col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" for="comment-body">Body:</label>
                <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                  <textarea class="form-control" rows="3"></textarea>
                </div>
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>

          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>