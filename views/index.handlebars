<h1>NEWS!</h1>

<h2>All the news fit to scrape from the Trib:</h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <th><h3>Title</h3></th>
      <th><h3>Summary</h3></th>
      <th><h3>Link</h3></th>
    </thead>
    <tbody>
      {{#each articles}}
        {{#if this.summary}}
          <tr>
              <th>
                {{this.title}}
              </th>
              <td>
                {{this.summary}}
              </td>
              <td>
                <a class="btn" target="_blank" href={{this.link}}>Go to Article</a>
              </td>
          </tr>
          <tr>
            <td class="text-center" colspan=3>
              <button class="btn JS-comment-btn {{this._id}}" data-id={{this._id}}>View Comments on #{{@index}}</button>
              <div class="comments-container {{this._id}}">
                <h4>Comments:</h4>
              </div>

              <form class="JS-comment-form form-horizontal" id={{this._id}}>
                <h4>Make Your Own Comment:</h4>
                <div class="form-group">
                  <label class="col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" for="comment-author-name">Name:</label>
                  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                    <input type="text" class="form-control" name="comment-author-name-{{this._id}}" placeholder="Your Name">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" for="comment-title">Title:</label>
                  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                    <input type="text" class="form-control" name="comment-title-{{this._id}}" placeholder="Comment Title">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" for="comment-body">Body:</label>
                  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                    <textarea form="{{this._id}}" class="form-control {{this._id}}" rows="3"></textarea>
                  </div>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              </form>

            </td>
          </tr>
        {{/if}}
      {{/each}}
    </tbody>
  </table>
</div>